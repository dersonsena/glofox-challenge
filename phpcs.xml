<?xml version="1.0"?>
<ruleset name="GoFlox Standard" namespace="MyProject\CS\Standard">
    <description>GoFlox custom coding standard</description>

    <file>./src</file>
    <file>./config</file>

    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="extensions" value="php" />
    <arg name="colors"/>

    <autoload>./vendor/autoload.php</autoload>

    <rule ref="PSR12"/>
</ruleset>
